{
  "name": "homebridge-rain-switch",
  "displayName": "Homebridge Rain Switch",
  "version": "0.1.0",
  "description": "Homebridge platform plugin that exposes switches reflecting rain and snow conditions",
  "keywords": [
    "homebridge-plugin",
    "homekit",
    "rain",
    "weather"
  ],
  "license": "MIT",
  "author": "DummyRainSwitch Maintainers",
  "repository": {
    "type": "git",
    "url": "git+https://example.com/DummyRainSwitch.git"
  },
  "bugs": {
    "url": "https://example.com/DummyRainSwitch/issues"
  },
  "homepage": "https://example.com/DummyRainSwitch#readme",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
